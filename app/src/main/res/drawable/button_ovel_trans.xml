<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:topLeftRadius="2dip"
                 android:bottomLeftRadius="2dip"
                 android:topRightRadius="2dip"
                 android:bottomRightRadius="2dip"
                  />
             <stroke android:width="0.5dip" android:color="@color/white" />
                       
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="2dip"
                 android:bottomLeftRadius="2dip"
                 android:topRightRadius="2dip"
                 android:bottomRightRadius="2dip"
                  />
             <stroke android:width="0.5dip" android:color="@color/white" />
             <solid  android:color="@android:color/transparent"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:topLeftRadius="2dip"
                 android:bottomLeftRadius="2dip"
                 android:topRightRadius="2dip"
                 android:bottomRightRadius="2dip"
                  />
             <stroke android:width="0.5dip" android:color="@color/gig_line" />
             <gradient  android:angle="-90"  android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" />            
         </shape>
     </item>
</selector>