<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destinationaddlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/app_back_color"
    android:gravity="center"
    android:visibility="gone" >

   

    <AutoCompleteTextView
        android:id="@+id/EnterDestination"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter destination address"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:paddingLeft="8dp"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textSize="@dimen/ub_textsize_search_big" />

     <ImageButton
         android:id="@+id/clearfield"
         android:layout_width="48dp"
         android:layout_height="48dp"
         android:layout_alignBottom="@+id/EnterDestination"
         android:layout_alignRight="@+id/EnterDestination"
         android:background="@android:color/background_light"
         android:src="@drawable/ic_menu_close_clear_cancel" />

</RelativeLayout>